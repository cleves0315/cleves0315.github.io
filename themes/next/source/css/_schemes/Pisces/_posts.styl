.posts-expand {
  padding-top: 0;
}

.post-block {
  position: relative;
  padding: $post-block-padding;
  margin-bottom: $post-block-margin-Bottom;
  background: $post-bg-color;
  border-radius: $border-radius;
  box-shadow: $post-block-shadow;
}

.post-body {
  +mobile() {
    text-align: justify;
  }
}

.post-time-label {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  color: #fff;
  background: #81ecec;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 60px;
  height: 60px;
  transform: translate(-50%, -50%);
  box-shadow: 0px 1px 4px rgba(0,0,0,0.2);

  div {
    line-height: 1;
  }

  .d {
    font-size: 25px;
    font-weight: 600;
    margin-top: 2px;
  }
}

.post-time {
  color: #3498db;
}
