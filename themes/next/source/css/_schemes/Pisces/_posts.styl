.post {
  padding-top: 30px;
  padding-left: 30px;
  position: relative;
  padding: $post-block-padding;
  margin-bottom: $post-block-margin-Bottom;
  background: $post-bg-color;
  border-radius: $border-radius;
  box-shadow: $post-block-shadow;
}

.posts-expand {
  padding-top: 0;
}

.post-body {
  +mobile() {
    text-align: justify;
  }
}

.post-time-label {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  color: #fff;
  background: #81ecec;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 70px;
  height: 70px;
  transform: translate(-50%, -50%);
  box-shadow: 0px 1px 4px rgba(0,0,0,0.2);

  div {
    line-height: 1;
  }

  .d {
    font-size: 30px;
    font-weight: 600;
    margin-top: 2px;
  }
}

.post-badge {
  position: absolute;
  left: -14px;
  top: 104px;
  border-color: #47456d;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
  background-color: #97dffd;
  margin: 5px 0 15px 2px;
  font-size: 14px;
  border-radius: 0 4px 4px 0;
  display: inline-block;
  padding: 7px 11px 7px 32px;
  line-height: 1;

  &:after {
    position: absolute;
    content: "";
    top: 100%;
    left: 0;
    border-top: 0 solid transparent;
    border-right-width: 1em;
    border-right-color: inherit;
    border-right-style: solid;
    border-bottom: 1em solid transparent;
    border-left: 0 solid transparent;
    width: 0;
    height: 0;
  }

  a {
    color: #fff;
  }
}

.post-time {
  color: #3498db;
}
