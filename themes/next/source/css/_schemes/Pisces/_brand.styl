.site-brand-wrapper {
  position: relative;
  width: 100%;
  height: 650px;
  overflow: hidden;
  background: linear-gradient(-45deg, #CBDCF2, transparent);

  .site-brand-back-img {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-40%);
  }
}

.site-meta {
  padding: 20px 0;
  color: white;
  background: $black-deep;
}

.brand {
  position: absolute;
  top: 260px;
  right: 0;
  left: 0;
  padding: 0;
  background: none;

  &:hover { color: white; }

  .site-title {
    width: 100%;
    line-height: 1;
    font-size: 100px;
    text-align: center;
    color: $theme-blue;
    user-select: none;
    font-family: $font-family-title;
    text-shadow: 5px 0px 0px #fff, -5px 0px 0 #fff, 0px 5px 0 #fff, 0px -5px 0 #fff;
  }
}

.site-master {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0;
  .site-master-frame {
    width: 600px;
    margin: 0 auto;
    padding: 20px 0;
    // background: rgba(0, 195, 255, .6);
    .site-master-img {
      width: 110px;
      height: 110px;
      border-radius: 50%;
      border: 2px dashed $theme-blue;
      padding: 5px;
      transition: transform .4s;
      &:hover {
        transform: scale(1.1, 1.1);
      }
    }
  }
}

.site-subtitle {
  margin: 10px 10px 0;
  font-weight: initial;
}

.site-search form { display: none; }
