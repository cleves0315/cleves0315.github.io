.container {
  display: flex;
  align-items: stretch;
}

.header {
  flex-grow: .7;
  display: flex;
  align-items: flex-end;
  flex-direction: column;

  +tablet-small() {
    flex-grow: 0;
  }
  +mobile() {
    flex-grow: 0;
  }

  .header-wrapper {
    width: 260px;
    position: relative;

    +desktop() {
      width: 88px;
    }
    +tablet() {
      width: 88px;
    }
    +tablet-small() {
      width: 68px;
    }
    +mobile() {
      position: fixed;
      left: 0;
      right: 0;
      bottom: 0;
      height: 50px;
      z-index: 9999;
    }

    .logo-wrapper {
      display: flex;
      flex-direction: column;

      +mobile() {
        display: none;
      }

      .name {
        display: none;
        font-size: 52px;
        font-weight: 100;
        user-select: none;
        color: $theme-blue;
        text-transform: capitalize;
        font-family: $font-family-title;
        text-shadow: 4px 0px 0px #fff, -4px 0px 0 #fff, 0px 4px 0 #fff, 0px -4px 0 #fff;

        +desktop-large() {
          display: block;
        }
      }

      .avatar {
        width: 54px;
        margin: 20px 0 40px;
        border-radius: 50%;

        +desktop-large() {
          display: none;
        }
      }
    }

    .header-inner {
      position: fixed;
      width: inherit;
      top: 0;
      margin: 0;
      padding: 0;
      height: 100%;
      padding-right: 20px;
      box-sizing: border-box;

      +mobile() {
        position: static;
      }
    }
  }
}

.main-container {
  position: relative;
  flex-grow: 1;
  max-width: 100%;

  +tablet-small() {
    width: unset;
    stretch();
  }
  +mobile() {
    width: unset;
    stretch();
  }
}

.main {
  padding: 0;
  margin: 0;
  clearfix();

  +desktop-large() {
    width: 85%;
    min-width: 1020px;
  }
  +tablet() {
    width: auto;
  }
  +tablet-small() {
    width: unset;
    stretch();
  }
  +mobile() {
    width: unset;
    stretch();
  }
}

.container .main-inner {
  display: flex;
  justify-content: space-between;
  width: auto;
  margin: 0;
  padding: 0;
  padding-top: 60px;
  +tablet-small() {
    width: unset;
    stretch();
  }
  +mobile() {
    width: unset;
    stretch();
  }
}

.content-wrap {
  width: 675px;
  min-height: 700px;
  box-sizing: border-box;
  box-shadow: $box-shadow-inner;

  +desktop-large() {
    margin: 0 auto;
  }
  +desktop() {
    margin: 0 auto;
  }
  +tablet-small() {
    width: unset;
    stretch();
  }
  +mobile() {
    width: unset;
    stretch();
  }

  @media (max-width: 700px) {
    padding: 0 20px;
  }

  .content {
    +tablet-small() {
      width: unset;
      stretch();
    }
    +mobile() {
      width: unset;
      stretch();
    }
  }
}

.sidebar {
  position: static;
  margin-top: 300px;
  width: $sidebar-desktop;
  background: $body-bg-color;
  box-shadow: none;

  +tablet() {
    display: none;
  }
  +tablet-small() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}

.sidebar-toggle { display: none; }

#backlife {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}


.footer-inner {
  width: $main-desktop;
  padding-left: 260px;
}



.sidebar-position-right {
  .footer-inner {
    padding-left: 0;
    padding-right: 260px;
  }
}

#evanyou {
  position: fixed;
  width: 1037px;
  height: 100%;
  top: 0;
  z-index: -1;
  background: #efefef;
}

.scaleup {
  transition: 0.3s ease;

  &:hover {
    transform: scale(1.1);
  }
}
