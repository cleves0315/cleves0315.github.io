.post {
  position: relative;
  padding-top: $post-block-top-btm-padding;
  padding-right: $post-block-both-padding;
  padding-bottom: $post-block-top-btm-padding;
  padding-left: $post-block-both-padding;
  margin-bottom: $post-block-margin-Bottom;
  background: $post-bg-color;
  border-radius: $border-radius;
  box-shadow: $post-block-shadow;
}

.post-header {
  margin-bottom: 20px;
}

.post-meta {
  .post-wordcount {
    color: #27ae60;
    &:before {
      content: '·';
      color: #27ae60;
      font-weight: 700;
      margin: 0 5px;
    }
  }
  .leancloud_visitors {
    color: #ff3f1a;
    &:before {
      content: '·';
      color: #ff3f1a;
      font-weight: 700;
      margin: 0 5px;
    }
  }
}

.posts-expand {
  padding-top: 0;
  .post-title-link {
    transition: transform .4s;
    &:hover {
      transform: scale(1.12);
    }
  }
}

.post-body {
  +mobile() {
    text-align: justify;
  }

  .post-button .btn {
    width: 144px;
    height: 44px;
    border: none;
    margin: 0 auto;
    border-radius: 9999px;
  }
}

.post-time-label {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  color: #fff;
  background: #81ecec;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 70px;
  height: 70px;
  transform: translate(-50%, -50%);
  box-shadow: 0px 1px 4px rgba(0,0,0,0.2);

  +tablet-small() {
    display: none;
  }
  +mobile() {
    display: none;
  }

  div {
    line-height: 1;
  }

  .d {
    font-size: 30px;
    font-weight: 600;
    margin-top: 2px;
  }
}

.post-badge {
  position: absolute;
  top: 0;
  left: 20px;
  width: 50px;
  height: 62px;
  padding-top: 15px;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  border-color: #47456d;
  background-color: $theme-blue;
  font-size: 14px;
  border-radius: 0 4px 4px 0;
  display: inline-block;
  line-height: 1;

  &:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 50px;
    background: #fff;
    transform: translateY(36px) rotate(45deg);
    box-shadow: 1px 1px 3px 0 rgba(0,0,0,0.12) inset, 2px 2px 2px 0 rgba(0,0,0,0.14) inset, 3px 3px 1px -2px rgba(0,0,0,0.2) inset;
  }

  a {
    color: #fff;
  }
}

.post-time {
  color: $theme-blue;
}

.archive {
  padding: 28px;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.1);

  .posts-collapse {
    margin-left: 0;
  }

  .page-archive-title {
    font-size: 30px;
    text-align: center;
  }

  .category-wrap {
    .page-archive-sub-title {
      font-size: 24px;
    }
    .category-list {
      display: flex;
      padding: 0 20px;
      &-item {
        list-style: none;
        color: $theme-blue;
        font-size: 16px;
        font-weight: 700;
        margin-right: 20px;

        .category-list-link {
          color: inherit;
        }
        .category-list-count {
          color: $grey;
          &:before {
            display: inline;
            content: " ("
          }
          &:after {
            display: inline;
            content: ") "
          }
        }
      }
    }
  }

  .collection-title {
    margin: 30px 0;
  }

  .post {
    padding: 0;
    box-shadow: none;
    .post-header {
      border-bottom: none;
      .post-title {
        font-size: 14px;
        margin-left: 65px;
      }
    }
  }
}

.category {
  padding: 28px;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.1);

  .collection-title {
    margin: 0;
  }

  .posts-collapse {
    margin-left: 0;
  }

  .page-archive-title {
    font-size: 30px;
    text-align: center;
  }

  .post {
    padding: 0;
    box-shadow: none;
    .post-title {
      font-size: 14px;
      margin-left: 65px;
    }
  }
}

.post-block {
  padding: 28px;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.1);
}

.post-footer {
  margin-top: 200px;
}

.post-button {
  margin-bottom: -180px;
}
